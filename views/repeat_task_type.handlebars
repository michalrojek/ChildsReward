    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                        <span class="sr-only">Włącz nawigację</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">DODAWANIE ZADANIA</a>
                </div>

                <div class="collapse navbar-collapse">
                    
                </div>
            </div>
        </nav>

        <div class="content">
            {{#if errors}}
                            {{#each errors}}
                                <div class="alert alert-danger">{{msg}}</div>
                            {{/each}}
                        {{/if}}
            <div class="container-fluid">
                <div class="row">
                    <a href="/dashboard/addTask/repeat" class="btn btn-default" style="margin-bottom:10px;">Dodaj własne zadanie</a><br>

                    <span style="line-height: 33px;">Lub wybierz jedno z naszych:<br></span>
                    <form method="post" action="/dashboard/repeatTaskType">
                        <select class="form-control" name="selectTaskType" id="selectTaskType">
                            {{#if predefinedTasks}}
                                {{#each predefinedTasks}}
                                    <option value="{{_id}}" class="select-profile">{{name}}</option>
                                {{/each}}
                            {{/if}}
                        </select>
                        <button type="submit" class="chooseChildButton">Zatwierdź</button>
                    </form>

                </div>
            </div>
        </div>
</div>
